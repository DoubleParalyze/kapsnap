<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zivkaputa.camerademo">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/main_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:name=".SimpleSnapApp">


        <activity android:name=".Activities.WelcomeActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>


        <activity android:name=".Activities.SwipeActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activities.ChooseFriendActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activities.LoginActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activities.RequestListActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activities.AddFriendActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Activities.SignUpActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="sign_up" />
            </intent-filter>
        </activity>

    </application>

</manifest>