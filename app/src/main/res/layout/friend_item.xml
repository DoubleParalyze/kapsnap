<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <TextView
        android:id="@+id/friend_item_full_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/themeInverted"
        android:text="@string/full_name_default" />

    <TextView
        android:id="@+id/friend_item_username"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textColor="@color/themeInvertedMedium"
        android:text="@string/username_default"/>


</LinearLayout>