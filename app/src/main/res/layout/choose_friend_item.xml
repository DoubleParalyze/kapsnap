<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">


    <TextView
        android:id="@+id/choose_friend_full_name"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/themeInverted"
        android:text="@string/full_name_default" />

    <TextView
        android:id="@+id/choose_friend_username"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textColor="@color/themeInvertedMedium"
        android:text="@string/username_default"/>


    <CheckBox
        android:id="@+id/choose_friend_select"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleY="1.5"
        android:scaleX="1.5"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:buttonTint="@color/themeInverted"
        android:layout_gravity="center"/>


</LinearLayout>